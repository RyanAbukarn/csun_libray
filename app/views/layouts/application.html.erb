<!DOCTYPE html>
<html>
  <head>
    <title>Library</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <nav class="navbar navbar-light bg-light">
    <%= link_to 'CSUN Library',root_path, class: "btn btn-outline-secondary my-2 my-sm-0" %>
    <form class="form-inline">

 

      <% if current_user %>
        <div class="mr-2">
      <%= link_to current_user.fname, current_user , class:"my-2 my-sm-0" %>
        </div>
        <div class="mr-2">
      <%= link_to 'Sign Out',session_path,method: :delete, class: "btn btn-outline-success my-2 my-sm-0" %>
        </div>
      <% else %>
      <%= link_to 'Sign Up',signup_path, class: "btn btn-outline-success my-2 my-sm-0" %> <br>
      <%= link_to 'Log In',new_session_path, class: "btn btn-outline-primary my-2 my-sm-0" %>
      <% end %>
     
      <% if current_user && current_user.admin? %>
        <div class="mr-2">
          <%= link_to 'All users',users_path, class: "btn btn-outline-success my-2 my-sm-0" %>
        </div>
        <div class="mr-2">
          <%= link_to 'Add new books',new_book_path, class: "btn btn-outline-success my-2 my-sm-0" %>
        </div>
        <div class="mr-2">
        <%= link_to 'All books',all_books_path, class: "btn btn-outline-success my-2 my-sm-0" %>
        </div>
        <div class="mr-2">
        <%= link_to 'Sign Up admin user',signup_path, class: "btn btn-outline-success my-2 my-sm-0" %>
        </div>
      <% end %>
    </form>
  </nav>
  <body>
    <% if flash[:notice] %>
    <div class="alert alert-primary" role="alert">
      <%= flash[:notice] %>
    </div>
    <% end %>
    
    <%= yield %>
  </body>
</html>
