<tr>
  <td><%= link_to book.name,book_path(book) %></td>
  <td><%= book.author %></td>
  <td><%= book.isbn %></td>
  <td>
    <% if current_user && current_user.admin? %>
      <%= link_to "Edit",edit_book_path(book), class: "btn btn-default btn-info" %>
      <%= link_to "Delete",book_path(book), data: {:confirm => 'Are you sure?'}, :method => :delete , class: "btn btn-default btn-danger", remote: true %>
    <% else %>
      <%= link_to "Rent",new_book_registration_path(book), class: "btn btn-default btn-primary" %>
      <% end %>
    </td>
</tr>
