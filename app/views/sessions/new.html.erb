<header>
    <h1>Sign In</h1>
</header>
<%= form_tag(session_path) do %>
<div class="form-group">
 <div class="form-group">
        <%= label_tag :email, "Email:", class: "col-md-4 control-label" %>
        <div class="col-md-8">
          <%= text_field_tag :email%>
        </div>
      </div>

 <div class="form-group">
        <%= label_tag :password, "password:", class: "col-md-4 control-label" %>
        <div class="col-md-8">
          <%= password_field_tag :password%>
        </div>
      </div>
       <div class="form-group">
        <%= submit_tag "log in"%>
      </div>
<div>
<% end %>